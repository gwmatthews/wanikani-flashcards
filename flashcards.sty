%%% NEW COMMANDS

\newcommand{\kanji}{\centering\fontsize{50}{50}}   %%% set main font size 
\newcommand{\redkanji}{\centering\fontsize{40}{40}\color{gray}}   %%% set main font size 
\newcommand{\smallkanji}{\centering\fontsize{22}{22}}   %%% set main font size 
\newcommand{\iskanji}[1]{\ifstrequal{#1}{k}{\kanji}{\ifstrequal{#1}{r}\redkanji}{\smallkanji}}
%\newcommand{\isradical}[1]{\ifstrequal{#1}{r}{\redkanji}{\smallkanji}}
\newcommand{\means}{\tcblower\centering}                %%% position lower text

%%% For styling flashcards

\newcommand{\flashset}{\tcbset{enhanced, segmentation hidden, frame hidden, borderline south={0.5pt}{-6.5pt}{black}, borderline north={0.5pt}{0pt}{black}}}

%%%%%%%%%%%%%%
% FIXED HEIGHT BOX FOR FLASHCARDS
% #1: tcolorbox options
% #2: box title

\newtcolorbox{flashbox}[2][]
{    
	height = 4.8cm,
	width = 6.6cm,
	toptitle=0.6cm,
	colback  = white,
	colbacktitle = white,
	halign title= center,
	halign=center,
	fontlower= \fontsize{11}{11},
	fonttitle= \fontsize{18}{18}, 
	title    = {#2},
	#1,
}

%%% display reading, kanji and meaning, use type to resize kanji
\newcommand{\flashFront}[4]
{
	\flashset\hfuzz=99pt
	\begin{flashbox}[coltitle=white, collower=white, colbacktitle= white]{#1}
		\iskanji{#4} #2

        \means #3 
	\end{flashbox}
}
%%%%%%%%%%%%%%%%

%%% display kanji and reading
\newcommand{\flashBack}[4]
{
	\flashset\hfuzz=99pt
	\begin{flashbox}[coltitle=black, collower=black, colupper=white, toptitle=2cm, middle=0mm, bottom=1cm]{#1}
		\smallkanji #2 
		\means #3
	\end{flashbox}
}
